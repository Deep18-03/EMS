@model Model.DepartmentModel

<hr />
<div id="message">
    @if (ViewBag.Message != null)
    {
        <p class="alert alert-success">@ViewBag.Message</p>
    }
</div>
<div class="card">
    <div class="card-body">
        <h2 class="card-title">Add Department</h2>
        <form asp-action='Create'>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row m-2">
                <div class="col-6">
                    <label asp-for="DepartmentName" class="control-label required"></label>
                    <input asp-for="DepartmentName" class="form-control" />
                    <span asp-validation-for="DepartmentName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3 ml-2">
                <div class="col">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                </div>
            </div>
        </form>

    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#message").fadeOut("slow");
        }, 3000);
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 