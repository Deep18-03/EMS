@model Model.EmployeeModel

@{
    ViewData["Title"] = Model != null ? "Edit" : "Create";
}

<h2>@ViewData["Title"] Employee</h2>

<hr />
<div class="row">
    <div class="col-lg-12">
        <form asp-action=@ViewData["Title"]>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-row">
                    <input asp-for="Emp_Id" class="form-control" hidden/>
                    <div class="col-lg-2">
                        <label asp-for="EmpTagNumber" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="EmpTagNumber" class="form-control" />
                        <span asp-validation-for="EmpTagNumber" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2">
                        <label asp-for="EmailAddress" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-2">
                        <label asp-for="FirstName" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2">
                        <label asp-for="LastName" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-2">
                        <label asp-for="Birthdate" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <input asp-for="Birthdate" class="form-control" />
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="col-lg-2">
                        <label asp-for="DepartmentId" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <select asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId","DepartmentName"))" class="form-control">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="col-lg-2">
                        <label asp-for="DesignationId" class="control-label"></label>
                    </div>
                    <div class="col-lg-4">
                        <select asp-for="DesignationId" asp-items="@(new SelectList(ViewBag.Designations,"DesignationId","DesignationName"))" class="form-control">
                            <option value="">--Select--</option>
                        </select>
                        <span asp-validation-for="DesignationId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <hr />
                </div>
                <div class="form-row">
                    <div class="col-lg-3">
                    </div>
                    <div class="col-lg-7">
                        <input type="submit" value="Save" class="btn btn-primary" />

                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 